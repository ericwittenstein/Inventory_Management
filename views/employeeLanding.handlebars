{{! this file will handle the rendering for the all employees view, which should load on clicking the employees button in the navbar }}

<div class="container">
	<h2 class="center-align">ALL EMPLOYEES</h2>

	<table class="striped responsive-table">
		<tbody>
			<tr>
				<td>Employee ID</td>
				<td>First Name</td>
				<td>Last Name</td>
			</tr>
			{{#each employees as |employee|}}
				<tr>
					<td>{{this.id}}</td>
					<td>{{this.first_name}}</td>
					<td>{{this.last_name}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>

	{{! Add Employee Button code goes here }}
	<button
		class="btn waves-effect waves-light blue lighten-2"
		onclick="location.href='https://inventorymanagement.herokuapp.com/employee_add'"
		type="submit button"
		name="action"
	>Add Employee</button>

	{{! Edit Employee Button code goes here }}
		<button
		class="btn waves-effect waves-light blue lighten-2"
		onclick="location.href='https://inventorymanagement.herokuapp.com/employee_edit'"
		type="submit button"
		name="action"
	>Edit Employee</button>
</div>